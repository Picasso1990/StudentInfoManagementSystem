<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/text_grade_courseName"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:text="程序设计(1)"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_bixiu"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:text="必修"
        android:textSize="11dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_bixiu_douhao"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/text_grade_bixiu"
        android:layout_marginBottom="12dp"
        android:textSize="13dp"
        android:text="|"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_courseClass"
        android:layout_toRightOf="@+id/text_grade_bixiu_douhao"
        android:layout_alignParentBottom="true"
        android:text="专业基础课"
        android:textSize="11dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_courseClass_douhao"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/text_grade_courseClass"
        android:layout_marginBottom="12dp"
        android:textSize="13dp"
        android:text="|"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_testClass"
        android:layout_toRightOf="@+id/text_grade_courseClass_douhao"
        android:layout_alignParentBottom="true"
        android:text="正常考试"
        android:textSize="11dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_xuefen"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:text="1.5学分"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_grade_fenshu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="90"
        android:textColor="@color/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_grade_isPass"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGreen"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>